//RC 서보모터 실습
#include "mbed.h"
PwmOut rc(D6);

void turn(PwmOut &rc,float deg);
template <class T>
T map(T x, T in_min, T in_max, T out_min, T out_max);

int main(){
    float ang=0.;
    float inc=0.1;
    rc.period_ms(10); //주파수 40KHZ
    turn(rc,0);
    while(true){
        turn(rc,ang);
        ang+=inc;
        if(ang>180.f||ang<0.f) inc=-inc;
        wait_ms(10);   
    }
}

void turn(PwmOut &rc,float deg){
    uint16_t pulseW=map<float>(deg,0.,180.,600.,2400.);
    rc.pulsewidth_us(pulseW);
    printf("pulseW = %d\n",pulseW);
}
//map 함수를 template로 자료형 구분 없이 계산
template<class T>
T map(T x, T in_min, T in_max, T out_min, T out_max){
    return (x-in_min)*(out_max-out_min)/(in_max-in_min)+out_min;
}
